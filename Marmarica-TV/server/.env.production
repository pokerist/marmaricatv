NODE_ENV=production
PORT=5000
UPLOAD_DIR=uploads
CLIENT_URL=https://your-domain.com
JWT_SECRET=replace-with-secure-random-string
JWT_EXPIRY=12h

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ENABLED=true
SECURE_COOKIES=true
COOKIE_DOMAIN=your-domain.com

# Logging
LOG_LEVEL=error
LOG_TO_FILE=true
LOG_FILE=logs/server.log

# Backup
BACKUP_ENABLED=true
BACKUP_DIR=backups
BACKUP_RETENTION_DAYS=30

# Note: Replace the following values with your actual production values
# - JWT_SECRET: Use a secure random string (min 32 chars)
# - CLIENT_URL: Your actual frontend domain
# - COOKIE_DOMAIN: Your actual domain
