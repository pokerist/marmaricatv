# Basic Configuration
PORT=3001
NODE_ENV=development

# Database
DATABASE_PATH=./database.sqlite

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here

# Transcoding Configuration
HLS_OUTPUT_BASE=/var/www/html/hls_stream
FFMPEG_PATH=ffmpeg
SERVER_BASE_URL=http://192.168.1.15

# Cleanup Configuration
# Interval between periodic cleanup runs (milliseconds)
# Default: 300000 (5 minutes)
CLEANUP_INTERVAL=300000

# Maximum age for segments before they are considered old (milliseconds)
# Default: 30000 (30 seconds)
MAX_SEGMENT_AGE=30000

# Maximum directory size per channel before cleanup is triggered (bytes)
# Default: 104857600 (100MB)
MAX_CHANNEL_DIR_SIZE=104857600

# Number of HLS segments to keep in playlist
# Default: 3
HLS_LIST_SIZE=3

# Age threshold for orphaned directories cleanup (milliseconds)
# Default: 3600000 (1 hour)
ORPHANED_DIR_CLEANUP_AGE=3600000

# Optional: Logging
LOG_LEVEL=info
