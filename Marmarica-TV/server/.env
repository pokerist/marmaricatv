# Server Configuration
NODE_ENV=production
PORT=5000
SESSION_SECRET=your-very-secure-random-string-change-this

# Database
DATABASE_PATH=./database.sqlite

# CORS and API URLs
CORS_ORIGIN=http://192.168.1.15:3000
API_URL=http://192.168.1.15:5000
SERVER_BASE_URL=http://192.168.1.15:5000

# File Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Transcoding Configuration
FFMPEG_PATH=ffmpeg
HLS_OUTPUT_BASE=/var/www/html/hls_stream
# HLS streams are served by nginx on port 80, not the Express server
HLS_BASE_URL=http://192.168.1.15

# Cleanup Configuration - Optimized for 24/7 live streams
CLEANUP_INTERVAL=300000
# Increased from 30s to 90s to prevent 404 errors on live streams
MAX_SEGMENT_AGE=90000
MAX_CHANNEL_DIR_SIZE=104857600
# Increased from 3 to 6 segments for better buffering on live streams
HLS_LIST_SIZE=6
ORPHANED_DIR_CLEANUP_AGE=3600000
